<div class="mapcontainer">
  <div class="mapbox" style="width:100%; height:100% ;"
    data-controller="mapbox"
    data-mapbox-markers-value="<%= @markers.to_json %>"
    data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>

<div class="cardscontainer">
  <% @biens.each do |bien| %>
    <%= link_to bien_path(bien) do %>
      <div class="card-product">
        <%= image_tag "#{bien.image}"%>
        <div class="card-product-infos">
          <h3><%= bien.user.surnom%></h3>
          <h5>
            <%= bien.ville %>
          </h5>
          <p>
          Loyé:<%= bien.loyé%>€/mois<br>
          <%=bien.meublé == true ? "Meublé" : "Non meublé"%><br>
          <%=bien.disponible == true ? "Pas encore loué" : "Loué"%>
          </p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
