<h2>Index</h2>
<div class="mapcontainer">
  <div style="width: 100%; height: 450px;"
      data-controller="mapbox"
      data-mapbox-markers-value="<%= @markers.to_json %>"
      data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
</div>

<div class="container">
  <% @biens.each do |bien| %>
      <div class="card">
        <div class="card-image">
          <%#= bien.image%>
        </div>
        <div class="card-title">
          <%= bien.user.name.key%>
          <%= bien.ville %>
        </div>
        <%= bien.address %>
        <%=bien.meublé?%>
        <%=bien.disponible?%>
        <%= bien.loyé%>
        <%=bien.saisonnié?%>
        <div class="action-bien">
          <%= link_to "voir l'appartement", bien_path(bien), class: "secondary-button"%>
        </div>
      </div>
  <% end %>
</div>
