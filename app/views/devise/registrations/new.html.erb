<div class="segment">

    <%# <div class="col-lg-12 col-md-6 ml-auto mr-auto"> %>
      <h1>Inscription</h1>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>


         <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :surnom, autofocus: true, class: 'form-control', input_html: { autocomplete: "Surnom" }  %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :password_confirmation, autocomplete: "off", class: 'form-control'%>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

        <div class="form-actions">
        <%# <%= f.button :submit, "Log in" %>
        <button class="red" type="button">
       Inscription
      </button>
      </div>
      <% end %>

      <div class="text-center">
        <%= render "devise/shared/links" %>
      </div>
    <%# </div> %>
  </div>

</div>
